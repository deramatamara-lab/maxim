# Project Aura Environment Configuration
# Copy this file to .env and fill in your values
# SECURITY: Never commit actual secrets to version control

# === API Configuration (Required) ===
# Production API endpoints
EXPO_PUBLIC_API_BASE_URL=https://api.aura.app/v1
EXPO_PUBLIC_WS_URL=wss://api.aura.app

# Staging API endpoints (for testing)
# EXPO_PUBLIC_API_BASE_URL=https://api-staging.aura.app/v1
# EXPO_PUBLIC_WS_URL=wss://api-staging.aura.app

# Development API endpoints (local)
# EXPO_PUBLIC_API_BASE_URL=http://localhost:8081/api
# EXPO_PUBLIC_WS_URL=ws://localhost:8081

# === Third-party Services ===
EXPO_PUBLIC_MAPBOX_TOKEN=pk.your-mapbox-token
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key

# === Environment Configuration ===
# Options: development, staging, production
EXPO_PUBLIC_ENV=production

# === Security Settings ===
# Enable/disable debug features (production should be false)
EXPO_PUBLIC_DEBUG=false
# Enable crash reporting and analytics
EXPO_PUBLIC_ANALYTICS_ENABLED=true
# Security headers and CORS settings
EXPO_PUBLIC_ENFORCE_HTTPS=true
# API timeout settings (milliseconds)
EXPO_PUBLIC_API_TIMEOUT=10000
# Token refresh settings
EXPO_PUBLIC_TOKEN_REFRESH_THRESHOLD=300

# === Feature Flags ===
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_RIDE_SHARING=true
EXPO_PUBLIC_ENABLE_SOS_FEATURE=true
EXPO_PUBLIC_ENABLE_VOICE_NAVIGATION=true

# === Payment Configuration ===
EXPO_PUBLIC_PAYMENT_GATEWAY=stripe
EXPO_PUBLIC_CURRENCY=USD
EXPO_PUBLIC_MIN_RIDE_FARE=5.00
EXPO_PUBLIC_MAX_RIDE_FARE=500.00

# === Map & Location Services ===
EXPO_PUBLIC_MAP_STYLE=mapbox://styles/mapbox/dark-v11
EXPO_PUBLIC_LOCATION_ACCURACY=high
EXPO_PUBLIC_LOCATION_UPDATE_INTERVAL=5000

# === Development Only ===
# Mock API responses (development only)
EXPO_PUBLIC_USE_MOCK_API=true
# Enable debug logging (development only)
EXPO_PUBLIC_VERBOSE_LOGGING=true

# === Demo Credentials (Development Only) ===
# These credentials are only active when EXPO_PUBLIC_USE_MOCK_API=true
# EXPO_PUBLIC_DEMO_EMAIL=demo@aura.com
# EXPO_PUBLIC_DEMO_PASSWORD=demo123

# === Production Overrides ===
# These values will be overridden in production builds
# EXPO_PUBLIC_API_BASE_URL=https://api.auraride.com
# EXPO_PUBLIC_ENV=production
# EXPO_PUBLIC_DEBUG=false
# EXPO_PUBLIC_USE_MOCK_API=false
# EXPO_PUBLIC_VERBOSE_LOGGING=false
